{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "modules"]
}
